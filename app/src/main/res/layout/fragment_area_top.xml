<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AreaTopFragment">

    <LinearLayout
        android:id="@+id/layoutAreaTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area Name"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/btnCreateArea"
            android:layout_toStartOf="@+id/btnCreateArea"
            android:layout_centerVertical="true"
            />
            <Button
                android:id="@+id/btnCreateArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_hollow"
                android:text="Create"
                android:textColor="@color/yellow"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="18sp"
                />
        </RelativeLayout>

        <EditText
            android:id="@+id/etAreaName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a Name"
            android:inputType="text"
            android:maxLines="2"/>

        <ImageView
            android:id="@+id/ivArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/kitchen_blue_line"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutToHide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryBlueTheme"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal"
            android:text="Select Area Type"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </LinearLayout>


</FrameLayout>